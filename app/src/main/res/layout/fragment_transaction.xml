<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wolfsoft.one.cg.epargne.Fragment_transaction"
    android:orientation="vertical"
    android:background="@drawable/signup_background"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:id="@+id/layoutuncon"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/labelMessage"
            android:textColor="@color/white"/>

    </LinearLayout>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/translay"
        android:orientation="vertical"
        android:visibility="gone">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:text="Approvisionnement du compte Epargne via mon compte courant"
            android:textColor="@color/dullWhite"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider"></LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:gravity="left"
            android:padding="12dp"
            android:text="Mon numéro de compte courant"
            android:textColor="@color/dullWhite"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etccourant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@color/fullTransparent"
            android:drawableLeft="@drawable/ic_avatar"
            android:drawablePadding="8dp"
            android:hint="Mon compte courant"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="#fff"
            android:textColorHint="@color/white"
            android:textSize="@dimen/textSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider"></LinearLayout>

        <EditText
            android:id="@+id/etdepositamount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@color/fullTransparent"
            android:drawableLeft="@drawable/ic_avatar"
            android:drawablePadding="8dp"
            android:hint="Montant à déposer"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textColor="#fff"
            android:textColorHint="@color/white"
            android:textSize="@dimen/textSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider"></LinearLayout>

        <EditText
            android:id="@+id/etpinlifoupay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@color/fullTransparent"
            android:drawableLeft="@drawable/ic_avatar"
            android:drawablePadding="8dp"
            android:hint="@string/pinlif"
            android:inputType="numberPassword"
            android:padding="12dp"
            android:textColor="#fff"
            android:textColorHint="@color/white"
            android:textSize="@dimen/textSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider"></LinearLayout>

        <Button
            android:id="@+id/btntransact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/blue"
            android:gravity="center"
            android:padding="20dp"
            android:text="Valider"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</LinearLayout>